<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.kevin.guideyourride">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DetailsActivity" />
        <activity android:name=".SignIn" />
        <activity android:name=".SignUp" />
        <activity
            android:name=".HomeScreenParent"
            android:label="@string/title_activity_home_screen_parent"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".PreferenceSetter" />

        <service
            android:name=".BikeNotificationHandlerService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".EditPic" />
        <activity android:name=".BikeLog"></activity>
    </application>

</manifest>