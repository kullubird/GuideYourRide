<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.kevin.guideyourride.SignIn"
    android:background="@drawable/by_wp"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:background="#b2bababa">
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Provide Your Details"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="40dp"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <EditText
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_username"
        android:hint="Enter Email ID"
        android:textColorHint="#000000"
        />

    <EditText

        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:hint="Enter Password"
        android:id="@+id/txt_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:textColorHint="#000000"/>



        <Button
            android:layout_margin="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Sign In"
            android:layout_gravity="center"
            android:background="@drawable/rounded_btn"
            android:textSize="25dp"
            android:padding="20dp"

            android:textColor="@color/themeYellow"
            android:id="@+id/btn_submit"/>


        <Button
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Proceed"
            android:layout_gravity="center"
            android:background="@drawable/rounded_btn"
            android:textSize="25dp"
            android:padding="20dp"

            android:textColor="@color/themeYellow"
            android:id="@+id/btn_submitf"/>
    </LinearLayout>
</LinearLayout>
